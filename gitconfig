[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[push]
	default = current
[core]
	excludesfile = /Users/thomas/.gitignore_global
	pager = less -F -X

[alias]
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  b = branch
  updateall = submodule foreach 'git pull'
  l = "!source githelpers && pretty_git_log"
  la = !git l --all
  r = !git l -30
  ra = !git r --all
[merge]
  tool = vimdiff
